<% layout("layouts/boilerplate") %>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <div class="container mt-5 mb-5">

        <h1 class="mb-4">Edit Your Listing</h1>

        <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
          <fieldset>
            <legend class="fw-bold">Listing Details</legend>

            <!-- Title -->
            <div class="mb-3">
              <label for="title" class="form-label">Title:</label>
              <input 
                type="text" 
                id="title" 
                name="listing[title]" 
                value="<%= listing.title %>" 
                class="form-control" 
                required>
              <div class="invalid-feedback">
                Let‚Äôs make your listing shine ‚Äî add a catchy title! ‚ú®
              </div>
            </div>

            <!-- Description -->
            <div class="mb-3">
              <label for="description" class="form-label">Description:</label>
              <textarea 
                id="description" 
                name="listing[description]" 
                class="form-control" 
                required
                rows="4"><%= listing.description %></textarea>
              <div class="invalid-feedback">
                Travelers love details ‚Äî please add a short description (min 20 characters). üß≠
              </div>
            </div>

            <!-- Category -->
            <div class="mb-3">
              <label for="category" class="form-label">Category:</label>
              <select name="listing[category]" id="category" class="form-select" required>
                <% const categories = ["trending","rooms","cities","mountains","arctic","luxury","beach","lakefront","pools","camping","farm"]; %>
                <% categories.forEach(cat => { %>
                  <option value="<%= cat %>" <%= listing.category === cat ? "selected" : "" %>>
                    <%= cat.charAt(0).toUpperCase() + cat.slice(1) %>
                  </option>
                <% }) %>
              </select>
            </div>

            <!-- Original Image -->
            <div class="mb-3">
              Original Listing image <br />
              <img src="<%= listing.image.url %>" height="200px" width="250px" style="border-radius: 10px;" alt="Old image">
            </div>

            <!-- New Image Upload -->
            <div class="mb-3">
              <label for="image" class="form-label">Upload New Image:</label>
              <input 
                type="file" 
                id="image" 
                name="listing[image]" 
                value="<%= listing.image.url %>" 
                class="form-control">
            </div>

            <!-- Price and Country -->
            <div class="row">
              <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price (INR):</label>
                <input 
                  type="number" 
                  id="price" 
                  name="listing[price]" 
                  value="<%= listing.price %>" 
                  class="form-control" 
                  required>
                <div class="invalid-feedback">
                  Looks low ‚Äî price should be at least ‚Çπ1200. üí∞
                </div>
              </div>
              <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country:</label>
                <input 
                  type="text" 
                  id="country" 
                  name="listing[country]" 
                  value="<%= listing.country %>" 
                  class="form-control" 
                  required>
                <div class="invalid-feedback">
                  Don't forget the country ‚Äî it helps travelers find you üåç
                </div>
              </div>
            </div>

            <!-- Location -->
            <div class="mb-3">
              <label for="location" class="form-label">Location:</label>
              <input 
                type="text" 
                id="location" 
                name="listing[location]" 
                value="<%= listing.location %>" 
                class="form-control" 
                required>
              <div class="invalid-feedback">
                Give a specific location (city, area or landmark) so guests can find you easily. üìç
              </div>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Update Listing</button>

          </fieldset>
        </form>

      </div>
    </div>
  </div>
</body>
